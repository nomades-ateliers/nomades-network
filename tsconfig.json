{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@nomades-network/api-interfaces": ["libs/api-interfaces/src/index.ts"],
      "@nomades-network/ui": ["libs/ui/src/index.ts"],
      "@nomades-network/ngrx/*": ["libs/ngrx/src/*"],
      "@nomades-network/core/*": ["libs/core/*"],
      "@nomades-network/features/*": ["libs/features/*"],
      "@nomades-network/utils": ["libs/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
